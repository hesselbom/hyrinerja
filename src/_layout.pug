block variables

doctype html
html
  head
    meta(charset='utf-8')
    title Hyr i Nerja - #{title}
    meta(name='description' content='Hyr lägenhet i Nerja, Spanien')
    meta(name='keywords' content='hyr, lägenhet, nerja, spanien')
    link(rel='stylesheet' type='text/css' href='/style/style.css')

    block extra_header

    script(src='https://identity.netlify.com/v1/netlify-identity-widget.js')
    script.
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on('init', function (user) {
          if (!user) {
            window.netlifyIdentity.on('login', function () {
              document.location.href = '/admin/';
            })
          }
        })
      }
  body
    .main
      img.front-img(src="/img/screen.jpg" alt="Nerja")
    .main
      h1 Välkommen till min lägenhet i Nerja - Spanien
      h2 Vindslägenhet m. takterass i Gamla stan
      ul#menu
        each item in menu
          li: a(href=item.href, class=(item.active ? 'selected' : '')) #{item.label}
    .main.text
      block content
